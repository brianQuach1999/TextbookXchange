        <title>Textbook Exchange - Search Textbooks</title>

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <!-- Custom styles for this template -->
        <link rel="stylesheet" type="text/css" href="css/template.css">
        <link rel="stylesheet" type="text/css" href="css/productcards.css">
        <link rel="stylesheet" type="text/css" href="css/categories.css">
        <link rel="stylesheet" type="text/css" href="css/loading.css">
        <link rel="stylesheet" type="text/css" href="css/dropdown.css">

        <link rel="stylesheet" type="text/css" href="css/search.css">

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>   
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/">Textbook Exchange <small>Your Textbook at a Cheaper Price</small></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item" id="profile">
                          <a class="nav-link" href="/profile">Account</a>
                        </li>
                        <li class="nav-item" id="login">
                          <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item" id="logout">
                          <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-search-button" href="/search">Search</a>
                        </li>
                        <li class="nav-item">
                            <div class="menu-shopping-cart-parent">
                                <a class="nav-link menu-shopping-cart" href="/cart"></a>
                                <div class="menu-shopping-number" id="menu-shopping-number"></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="cover">
            <div class="cover-title">
                <h1>Search for the Perfect Textbook</h1>
            </div>
        </div>

        <div class="search">
            <div class="search-title">
                Course:
            </div>
            <div class="search-bar">
                <input type="text" name="Course" class="dropdown-input" id="course" placeholder="Enter a Course">
            </div>
            <div class="search-title">
                Textbook:
            </div>
            <div class="search-bar">
                <input type="text" name="textbook" class="dropdown-input" id="textbook" placeholder="Enter a Textbook">
            </div>
            <div class="search-button" id=search-button>
                <img src="images/icons/search-white-bold.png">
            </div>
        </div>
        
        <div class="product-container bottom">
            <div class="sort-container">
                <select id="select" class="dropdown">
                    <option value="price">Sort by Price</option>
                    <option value="alphabetically">Sort Alphabetically</option>
                    <option value="couorse">Sort by Course</option>
                </select>
            </div>

            <div class="category-parent">
                <div class="category-header">
                    Category
                </div>
                <div class="list-group categories" id="categories">

                </div>  
            </div>

            <div class="product-parent" id="product-parent">
                
            </div>

            <div class="loading" id="loading">
                <span></span>
                <span></span>
                <span></span>
            </div> 
        </div>
        
        <footer class="py-5 bg-dark">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; Textbook Exchange 2019</p>
            </div>
        </footer>
        <script>const session = {{{ session }}};</script>
        <script src="js/nav.js"></script>
        <script src="js/dropdown.js"></script>
        <script src="js/API/textbook-script.js"></script>
        <script src="js/API/category-script.js"></script>
        <script src="js/product-area.js"></script>
        <script src="js/product-search.js"></script>
        <script src="js/categories.js"></script>
        <script src="js/search.js"></script>
    </body>
</html>